<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kanafghan.tamsil.MovieActivity"
    android:orientation="vertical">

    <TextView android:id="@+id/movie_title"
        android:text="The Amazing Spiderman 3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingRight="8dp"
        android:paddingBottom="16dp"
        android:paddingLeft="8dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#999"
        android:background="#fff"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">

        <ImageView
            android:id="@+id/movie_poster"
            android:layout_width="wrap_content"
            android:layout_height="185dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginLeft="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="32dp"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="#fff">

            <TextView
                android:id="@+id/movie_release_date"
                android:text="2017"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/movie_rating"
                android:text="9.7/10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="#000" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/movie_plot"
        android:text="Som very long text, that spans over multiple lines. Lorem ipsum sin amit darsjuni."
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#fff"
        android:textColor="#000"
        android:typeface="serif"
        android:padding="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp" />

</LinearLayout>
